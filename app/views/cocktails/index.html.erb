<p id="notice"><%= notice %></p>
<div class="container">

<h1>Cocktails</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= cocktail.name %></td>
        <td><%= link_to 'See more...', cocktail %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New cocktail', new_cocktail_path %>
</div>
